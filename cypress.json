{
    "baseUrl": "http://localhost:3000/#",
    "testFiles": "**/*.feature",
    "experimentalNetworkStubbing": true,
    "requestTimeout": 15000,
    "pageLoadTimeout": 15000,
    "defaultCommandTimeout": 15000,
    "video": false,
    "env": {
        "TAGS": "@smoke",
        "api": "http://localhost:3000/"
    },
    "reporter": "mochawesome",
    "reporterOptions": {
        "overwrite": "false",
        "html": "false",
        "json": "true"
    },
    "retries": {
        "runMode": 1,
        "openMode": 1
    }
}